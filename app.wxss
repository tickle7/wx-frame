/**app.wxss**/

page {
  animation: fade-in 0.8s ease-in-out 1;
  -webkit-animation: fade-in 0.8s ease-in-out 1;
}

@keyframes fade-in {
  0% {
      opacity: 0.3;
  }

  100% {
      opacity: 1;
  }
}

@-webkit-keyframes fade-in {
  0% {
      opacity: 0.3;
  }

  100% {
      opacity: 1;
  }
}

page {
  height: 100%;
  width: 100%;
  overflow: hidden;
  font-family: MicrosoftYaHei;
  -webkit-overflow-scrolling: touch;
}

.page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.app{
  width: 100%;
  height: 100%;
}
view {
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
}

picker {
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
  color: #333;
}

form {
  display: block;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
  font-size: 34rpx;
}
textarea{
  width: auto;
  color: #333;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
}
input{
  color: #333;
  width: 100%;
}
button{
  display: inline-block;
  width: 100%;
  padding: 0 32rpx;
  font-size: 31rpx;
  text-align: center;
  border: none;
  background: #006eff;
  font-weight: 400;
  color: #fff;
  white-space: nowrap;
  opacity: 0.8;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.button-hover {
  background: #006eff;
  color: #fff;
}

.overflow-y{
  overflow-y: auto;
  overflow-x: hidden;
}
